    <select id="getDishByCondition" resultType="com.axing.reggie.dto.DishDto">
        select
            id,
            name,
            category_id,
            price,
            code,
            image,
            description,
            status,
            sort,
            is_deleted
        from dish
        <where>
            <if test="categoryId != null and categoryId != ''">
                category_id=#{categoryId}
            </if>
            <if test="name !=null and name !=''">
                name like '%' #{name} '%'
            </if>
        </where>
        and status=1
        order by sort asc
    </select>

